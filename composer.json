{
    "name": "drewroberts/blog",
    "description": "Laravel package for opinionated blog implementation",
    "keywords": [
        "laravel",
        "laravel package",
        "blog"
    ],
    "homepage": "https://github.com/drewroberts/blog",
    "license": "MIT",
    "authors": [
        {
            "name": "Drew Roberts",
            "email": "github@drewroberts.com",
            "homepage": "https://drewroberts.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3",
        "laravel/nova": "^3.17",
        "drewroberts/media": "^2.0.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.0",
        "psalm/plugin-laravel": "^1.2",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "DrewRoberts\\Blog\\": "src",
            "DrewRoberts\\Blog\\Database\\Factories\\": "database/factories/"
        },
        "files": [
            "src/Helpers/Test.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "DrewRoberts\\Blog\\Tests\\": "tests"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "DrewRoberts\\Blog\\BlogServiceProvider"
            ],
            "aliases": {
                "Blog": "DrewRoberts\\Blog\\BlogFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
