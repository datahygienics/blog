{
    "name": "drewroberts/blog",
    "description": "Laravel package for opinionated blog implementation",
    "keywords": [
        "laravel",
        "laravel package",
        "blog"
    ],
    "homepage": "https://github.com/drewroberts/blog",
    "license": "MIT",
    "authors": [
        {
            "name": "Drew Roberts",
            "email": "github@drewroberts.com",
            "homepage": "https://drewroberts.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "drewroberts/media": "^3.0.2",
        "tipoff/support": "^1.1.0",
        "cakephp/chronos": "^1.2|^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "laravel/legacy-factories": "1.0.4",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.3",
        "spatie/laravel-ray": "^1.9",
        "vimeo/psalm": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "DrewRoberts\\Blog\\": "src",
            "DrewRoberts\\Blog\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DrewRoberts\\Blog\\Tests\\": "tests"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "DrewRoberts\\Blog\\BlogServiceProvider"
            ],
            "aliases": {
                "Blog": "DrewRoberts\\Blog\\BlogFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
